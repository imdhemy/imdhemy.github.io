#!/bin/bash

# This script is used to manage the blog application on local machine.

set -e

# Start the application
start() {
  echo "Starting the server..."
  jekyll serve --watch --drafts --open
}

# Run the command or display the help
case "$1" in
  start)
    start
    ;;
  *)
    echo "Usage: bin/console <command>"
    echo "Available commands:"
    echo "  - start: start the application as a daemon"
    ;;
esac
